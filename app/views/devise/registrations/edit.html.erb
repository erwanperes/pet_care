<div>
  <h2>Edit my profil</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div>
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :address %>
      <%= f.input :email, required: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>En attente de confirmation pour: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "Leave blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "We need your current password to confirm changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div>
      <%= f.button :submit, "Update" %>
    </div>
  <% end %>

  <div>
    <h3>Delete my account</h3>
    <p>If you delete your account, all your data will be deleted.<%= button_to "Delete my account", registration_path(resource_name), 
                    data: { confirm: "Are you sure ?" }, method: :delete %></p>
  </div>

  <%= link_to "Back", :back %>
</div>