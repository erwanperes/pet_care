<%= render "pages/menu" %>
<div>
<section class="position-relative py-5">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-9 col-lg-5 mx-auto mx-lg-0 mb-5">
        <div class="text-center py-5">
          <span class="text-muted">Sign Up</span>
          <h3 class="fw-bold mb-5">Create new account</h3>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="row mb-2">
              <div class="col-12 col-md-6 mb-2 mb-lg-0">
                <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    placeholder: 'First Name',
                    label: false,
                    input_html: { class: 'form-control' } %>
              </div>
              <div class="col-12 col-md-6">
                <%= f.input :last_name,
                    required: true,
                    placeholder: 'Last Name',
                    label: false,
                    input_html: { class: 'form-control' } %>
              </div>
            </div>

            <%= f.input :email,
                required: true,
                placeholder: 'E-mail address',
                label: false,
                input_html: { autocomplete: "email", class: 'form-control mb-2' } %>

            <%= f.input :address,
                placeholder: 'Address',
                label: false,
                input_html: { class: 'form-control mb-2' } %>

            <%= f.input :password,
                required: true,
                placeholder: 'Password',
                label: false,
                hint: false,
                input_html: { autocomplete: "new-password", class: 'form-control mb-2' } %>

            <%= f.input :password_confirmation,
                required: true,
                placeholder: 'Confirm Password',
                label: false,
                input_html: { autocomplete: "new-password", class: 'form-control mb-3' } %>

            <label class="mb-3">
              <input class="form-check-input me-2" type="checkbox" name="terms" value="1">
              <small class="text-muted">By signing up, you agree to our <a href="#">Terms, Data Policy</a> and <a href="#">Cookies Policy</a>.</small>
            </label>

            <%= f.button :submit, "Sign Up", class: "btn btn-primary py-2 w-100 mb-3" %>

            <p class="text-muted">
              <span><small>Already have an account?</small></span>
              <%= link_to "Sign In", new_session_path(resource_name) %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
    <div class="d-none d-lg-block position-absolute top-0 end-0 bottom-0 w-50" style="background-image: url(''); background-repeat: no-repeat; background-size: cover;"></div>
  </div>
</section>

</div>
